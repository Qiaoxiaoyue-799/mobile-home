<view class="title">
  <text>手机品牌信息列表</text>
</view>
<view class="content">
  <text>手机型号：{{detail.name}}</text>
  <text>手机芯片：{{detail.chip}}</text>
  <text>手机屏幕：{{detail.screen}}</text>
  <text>手机储存：{{detail.cache}}</text>
  <text>前置像素：{{detail.fcamera}}</text>
  <text>后置像素：{{detail.rcamera}}</text>
  <text>电池容量：{{detail.battery}}</text>
  <text>手机价格：{{detail.price}}</text>

  <button class="btn" bindtap="goDetail" data-id="{{detail._id}}" size="mini" style="font-size: 12px;">修改</button>
</view>
