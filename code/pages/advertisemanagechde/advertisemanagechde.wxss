.title{
  width: 90%;
  height: 60rpx;
  padding: 1%;
  /* padding-right: 500rpx; */
  margin-left:4%;
  margin-top: 4%;
  /* background-color: pink; */
  border-bottom: 2px solid gray;
} 
.btn{
  width: 150rpx;
  height: 55rpx;
  margin: 0;
  float: right;
  font-size: 30rpx;
  color: white;
  background-color: #6f3b3b;
  line-height: 1.8;
}
input{
  float: left;
  width: 80%;
  border:1px solid gray;
}
label{
  float: left;
  width: 15%;
}
.boxtu{
  display: block;
  width: 90%;
  height: 260px;
  margin:0 auto;
}
.box{
  display: block;
  width: 90%;
  height: 30px;
  margin:0 auto;
}
.content{
  border:1px solid rgb(156, 151, 151);
  width: 80%;
  height: 400px;
  padding:2%;
  margin:0 auto;
  margin-top: 10px;
  box-shadow:0px 4px 8px 4px #DDDDDD;
  /* border-radius: 20px; */
}
.condetail{
  background-color:#fcfcfc;
  width: 96%;
  height: 250rpx;
  padding:1.5%;
  /* margin-bottom: 30rpx; */
  border: 1px solid gray;
  border-radius: 10rpx;
}
.img{
  display:block ;
  width: 100%;
  height: 160px;
  margin:0 auto;
  margin-bottom: 20px;
  border:1px solid gray;
  border-radius: 20px;
  float: left;
}